{
    "extends": [
        "config:base",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone",
        ":switchToGradleLite",
        "github>batect/renovate-config:default"
    ],
    "reviewers": [
        "charleskorn"
    ],
    "automerge": true,
    "labels": [
        "is:dependency-update"
    ],
    "rebaseWhen": "behind-base-branch",
    "regexManagers": [
        {
            "fileMatch": [
                ".gradle.kts$"
            ],
            "matchStrings": [
                "golangCILintVersion\\.set\\(\"(?<currentValue>v[\\d.]+)\"\\)"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "golangci/golangci-lint"
        },
        {
            "fileMatch": [
                "^.github/workflows/ci.yml$"
            ],
            "matchStrings": [
                "go-version: (?<currentValue>[\\d.]+)"
            ],
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "golang/go"
        },
        {
            "fileMatch": [
                "GolangBuild.kt$"
            ],
            "matchStrings": [
                "val golangVersion = \"(?<currentValue>[\\d.]+)\""
            ],
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "golang/go"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": ["golang/go"],
            "matchDatasources": ["github-tags"],
            "extractVersion": "^go(?<version>[\\d.]+)"
        },
        {
            "groupName": "Kotlin",
            "matchManagers": ["gradle-lite"],
            "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin\\."],
            "matchDepTypes": ["plugin"]
        },
        {
            "matchDatasources": ["maven"],
            "matchPackagePatterns": ["\\.gradle\\.plugin$"],
            "registryUrls": [
                "https://repo.maven.apache.org/maven2/",
                "https://plugins.gradle.org/m2/"
            ]
        },
        {
            "groupName": "Kotest",
            "matchManagers": ["gradle-lite"],
            "matchPackagePatterns": ["^io\\.kotest:"]
        }
    ]
}
